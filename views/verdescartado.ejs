<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css/estilos.css">
    <title>Produtos</title>
</head>
<body>
    <div class="text-center">
        <h1 class="text-center">Lista de Produtos Descartados / Consumidos</h1>
        </div>
    </div><br>
    </h3>
    <table class="table table-striped table-hover">
        <tr>
            <th>Produto</th>
            <th>Data de Validade</th>
            <th>Desfazer</th>
 
        </tr>
        <% for (var n=0; n<resultadoDescartado.length; n++){%>
            <tr>
                <td><%=resultadoDescartado[n].produto%></td>
                <td><%=resultadoDescartado[n].data.getDate()+1%>/<%=resultadoDescartado[n].data.getMonth()+1%>/<%=resultadoDescartado[n].data.getFullYear()%></td>
                <td><a href="/desfazer?id=<%=resultadoDescartado[n]._id%>" class="btn btn-info form-control">Desfazer</a></td>
            </tr>
            <%}%> 

    </table>
        <br>
        <div class="col-sm text-center "><a href="/produtos" class="btn btn-outline-dark">Voltar</a></div>
    </body>
</html>